generator client {
  provider = "prisma-client"
  output   = "../.prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  chatBots  ChatBot[]
  createdAt DateTime @default(now())
}

model ChatBot {
  id          String   @id @default(uuid())
  avatar      String
  name        String
  description String
  prompt      String
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String
  createdAt   DateTime @default(now())
}